=== if statement
def sign(x: int) -> int:
    if x > 0:
        return 1
    elif x < 0:
        return -1
    else:
        return 0
--- go
func Sign(x int) int {
	if x > 0 {
		return 1
	} else if x < 0 {
		return -1
	} else {
		return 0
	}
}
--- java
static int sign(int x) {
    if (x > 0) {
        return 1;
    } else {
        if (x < 0) {
            return -1;
        } else {
            return 0;
        }
    }
}
--- typescript
function sign(x: number): number {
  if (x > 0) {
    return 1;
  } else {
    if (x < 0) {
      return -1;
    } else {
      return 0;
    }
  }
}
--- javascript
function sign(x) {
  if (x > 0) {
    return 1;
  } else {
    if (x < 0) {
      return -1;
    } else {
      return 0;
    }
  }
}
--- ruby
def sign(x)
  if x > 0
    return 1
  elsif x < 0
    return -1
  else
    return 0
  end
end
--- perl
sub sign ($x) {
    if ($x > 0) {
        return 1;
    } elsif ($x < 0) {
        return -1;
    } else {
        return 0;
    }
}
--- php
function sign(int $x): int
{
    if ($x > 0)
    {
        return 1;
    }
    else
    {
        if ($x < 0)
        {
            return -1;
        }
        else
        {
            return 0;
        }
    }
}
