=== while loop
def countdown(n: int) -> int:
    total: int = 0
    while n > 0:
        total = total + n
        n = n - 1
    return total
--- go
func Countdown(n int) int {
	total := 0
	for n > 0 {
		total = total + n
		n = n - 1
	}
	return total
}
--- java
static int countdown(int n) {
    int total = 0;
    while (n > 0) {
        total = total + n;
        n = n - 1;
    }
    return total;
}
--- typescript
function countdown(n: number): number {
  var total: any = 0;
  while (n > 0) {
    total = total + n;
    n = n - 1;
  }
  return total;
}
--- javascript
function countdown(n) {
  let total = 0;
  while (n > 0) {
    total = total + n;
    n = n - 1;
  }
  return total;
}
--- ruby
def countdown(n)
  total = 0
  while n > 0
    total = total + n
    n = n - 1
  end
  return total
end
--- perl
sub countdown ($n) {
    my $total = 0;
    while ($n > 0) {
        $total = $total + $n;
        $n = $n - 1;
    }
    return $total;
}
--- php
function countdown(int $n): int
{
    $total = 0;
    while ($n > 0)
    {
        $total = $total + $n;
        $n = $n - 1;
    }
    return $total;
}
