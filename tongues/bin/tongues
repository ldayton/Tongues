#!/usr/bin/env python3
"""Tongues CLI entry point."""
import sys

if sys.version_info < (3, 14):
    print("Tongues requires Python 3.14+. You have %d.%d." % sys.version_info[:2], file=sys.stderr)
    sys.exit(1)

from pathlib import Path

# Add project root to path (resolve symlinks for Homebrew compatibility)
sys.path.insert(0, str(Path(__file__).resolve().parent.parent))

from src.tonguesw import main
sys.exit(main())
